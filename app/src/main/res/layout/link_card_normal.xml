<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/card_view"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_margin="8dp"
	card_view:cardBackgroundColor="@android:color/white"
	card_view:cardCornerRadius="4dp"
	card_view:cardElevation="3dp"
	card_view:cardPreventCornerOverlap="true"
	card_view:cardUseCompatPadding="false"
	card_view:contentPadding="0dp"
	card_view:contentPaddingBottom="0dp"
	card_view:contentPaddingLeft="0dp"
	card_view:contentPaddingRight="0dp"
	card_view:contentPaddingTop="0dp"
	card_view:paddingEnd="0dp"
	card_view:paddingStart="0dp"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		card_view:cardCornerRadius="2dp"
		android:background="#00BCD4">

		<TextView
			android:id="@+id/link_description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="12dp"
			android:textIsSelectable="true"
			android:text="@string/link_text_description"
			android:textColor="@color/colorHighlight"
			android:textSize="18sp"/>
		<TextView
			android:id="@+id/link_url"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="12dp"
			android:textIsSelectable="true"
			android:text="@string/link_text_uri"
			android:textSize="16sp"
			android:textStyle="bold|italic"
			android:textColor="#B2EBF2"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="#00ACC1"
			/>
		<include layout="@layout/note_card_controls" />
	</LinearLayout>

</android.support.v7.widget.CardView>